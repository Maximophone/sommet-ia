---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import BackgroundImage from '../components/BackgroundImage.astro';
import ContributionsHero from '../components/ContributionsHero.astro';
import EventFormats from '../components/EventFormats.astro';
import Projects from '../components/Projects.astro';
import Process from '../components/Process.astro';
import Criteria from '../components/Criteria.astro';
import FAQ from '../components/FAQ.astro';
import ContributionsC2A from '../components/ContributionsC2A.astro';

const title = "Appel à Contributions - Forum des Solutions pour une IA Compatible avec l'Humanité";
const description = "Participez à la construction d'un futur positif pour l'IA ! Découvrez les différents formats de participation et rejoignez-nous dans cette initiative cruciale.";
---

<Layout title={title} description={description}>
  <div class="relative py-20 sm:pb-24 sm:pt-36">
    <BackgroundImage class="-bottom-14 -top-36" />
    <Container class="relative">
      <div class="mx-auto max-w-2xl lg:max-w-4xl lg:px-12">
        <ContributionsHero />
        <EventFormats />
        <Projects />
        <Process />
        <Criteria />
        <FAQ />
        <ContributionsC2A />
      </div>
    </Container>
  </div>
</Layout>