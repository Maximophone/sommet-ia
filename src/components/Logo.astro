---
import { Image } from 'astro:assets';
import type { HTMLAttributes } from 'astro/types';
import logoImage from '../assets/logo/logo.svg';
import titleImage from '../assets/logo/title.svg';

interface Props extends HTMLAttributes<'div'> {
  class?: string;
  vertical?: boolean;
  hoverable?: boolean;
}

const { class: className, vertical = false, hoverable = false, ...props } = Astro.props;
---

<div class:list={[
  "flex items-center w-full",
  vertical ? "flex-col" : "",
  hoverable && "group",
  className
]} {...props}>
  <Image 
    src={logoImage}
    alt=""
    class:list={[
      vertical ? "w-64" : "h-full w-auto",
      hoverable && "transform-gpu origin-center motion-safe:transition-transform motion-safe:group-hover:scale-125"
    ]}
  />
  <Image 
    src={titleImage}
    alt="Reprendre le Contrôle: Forum des solutions pour une IA compatible avec l'humanité"
    class={`${vertical ? "w-96" : "h-full w-auto"} ${vertical ? "mt-[3%]" : "ml-[3%]"}`}
  />
</div>